<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="50dp" android:height="30dp" />
                    <solid android:color="@color/pub_color_gray_999" />
                    <corners android:radius="50dp" />
                </shape>
            </item>

            <item android:bottom="1dp" android:gravity="left|center_vertical" android:left="1dp" android:right="20dp" android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/pub_color_white" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="50dp" android:height="30dp" />
                    <solid android:color="@color/pub_color_green" />
                    <corners android:radius="50dp" />
                </shape>
            </item>

            <item android:bottom="1dp" android:gravity="right|center_vertical" android:left="20dp" android:right="1dp" android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/pub_color_white" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>