<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/pub_color_white" />
                    <size android:width="110dp" android:height="55dp" />
                </shape>
            </item>
            <item android:bottom="-20dp" android:right="-20dp" android:top="-20dp">
                <shape android:shape="rectangle">
                    <stroke android:width="5dp" android:color="@color/pub_color_blue" />
                    <size android:width="55dp" android:height="55dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/pub_color_white" />
                    <size android:width="110dp" android:height="55dp" />
                </shape>
            </item>
            <item android:bottom="-20dp" android:right="-20dp" android:top="-20dp">
                <shape android:shape="rectangle">
                    <stroke android:width="5dp" android:color="@color/pub_color_blue" />
                    <size android:width="55dp" android:height="55dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pub_color_gray_line" />
            <size android:width="110dp" android:height="55dp" />
        </shape>
    </item>

</selector>