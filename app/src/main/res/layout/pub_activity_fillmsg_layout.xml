<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_gray_f5f5f5"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:paddingTop="16dp"
                android:text="所选小区：大明湖畔夏雨荷"
                android:textColor="@color/pub_color_black"
                android:textSize="@dimen/text_h17" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_gray_f5f5f5"
                android:paddingBottom="18dp"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:paddingTop="2dp"
                android:text="为使我我们的服务能准确上门，请确保你的住址填写正确"
                android:textColor="@color/pub_color_gray_999"
                android:textSize="10dp" />


            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:hint="姓名"
                android:textColor="@color/pub_color_black"
                android:textColorHint="@color/pub_color_gray_999"
                android:textSize="@dimen/text_h14" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:hint="手机号"
                android:textColor="@color/pub_color_black"
                android:textColorHint="@color/pub_color_gray_999"
                android:textSize="@dimen/text_h14" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:hint="密码"
                android:visibility="gone"
                android:textColor="@color/pub_color_black"
                android:textColorHint="@color/pub_color_gray_999"
                android:textSize="@dimen/text_h14" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:visibility="gone"
                android:hint="再次输入密码"
                android:textColor="@color/pub_color_black"
                android:textColorHint="@color/pub_color_gray_999"
                android:textSize="@dimen/text_h14" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:hint="验证码"
                    android:textColor="@color/pub_color_black"
                    android:textColorHint="@color/pub_color_gray_999"
                    android:textSize="@dimen/text_h14" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:paddingLeft="39dp"
                    android:paddingRight="39dp"
                    android:text="获取验证码" />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:gravity="center"
                android:text="注：手机号和密码作为您的登录凭证"
                android:textColor="@color/pub_color_gray_666"
                android:textSize="@dimen/text_h12" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/pub_btn_blue_arc_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="完成注册"
                android:textColor="@color/pub_color_white"
                android:textSize="@dimen/text_h20" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>
