<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/pub_color_gray_f5f5f5"
    android:orientation="vertical"
    android:paddingTop="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="14dp"
            tools:text="豆豆小朋友"
            android:textColor="@color/pub_color_black"
            android:textSize="@dimen/text_h12" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="22dp"
            tools:text="2017-07-24 16:24"
            android:textColor="@color/pub_color_gray_999"
            android:textSize="@dimen/text_h12" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="14dp"
        android:paddingRight="30dp"
        android:paddingTop="9dp"
        tools:text="宝贝收到满满的一箱，儿子很喜欢吃这个饼干。还送了椰子片，味道也不错。"
        android:textColor="@color/pub_color_gray_666"
        android:textSize="@dimen/text_h12" />

</LinearLayout>