<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_color_gray_f5f5f5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.framework.view.AddView
                android:id="@+id/addView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:id="@+id/ll_repair_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/pub_icon_menu" />

                <TextView
                    android:id="@+id/tv_repair_mame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h15"
                    tools:text="水龙头坏了" />

            </LinearLayout>

            <View
                style="@style/line_gray_h"
                android:layout_marginLeft="26dp" />

            <LinearLayout
                android:id="@+id/ll_repair_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/pub_icon_location" />

                <TextView
                    android:id="@+id/tv_repair_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h15"
                    tools:text="xxxx小区街道106" />

            </LinearLayout>

            <View style="@style/line_gray_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="状态："
                    android:textColor="@color/pub_color_gray_666"
                    android:textSize="@dimen/text_h14" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h14"
                    tools:text="已接单" />

            </LinearLayout>

            <View style="@style/line_gray_h" />

            <LinearLayout
                android:id="@+id/ll_accendant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="师傅姓名"
                    android:textColor="@color/pub_color_gray_666"
                    android:textSize="@dimen/text_h14" />

                <TextView
                    android:id="@+id/tv_accendant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="豆豆小朋友"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h14" />

            </LinearLayout>

            <View
                android:id="@+id/line_accendant_name"
                style="@style/line_gray_h" />

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_white"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="联系电话"
                    android:textColor="@color/pub_color_gray_666"
                    android:textSize="@dimen/text_h14" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="17321372136"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h14" />

            </LinearLayout>

            <View
                android:id="@+id/line_phone"
                style="@style/line_gray_h" />

            <LinearLayout
                android:id="@+id/ll_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="22dp"
                    android:text="评价"
                    android:textColor="@color/pub_color_gray_666"
                    android:textSize="@dimen/text_h14" />

                <RadioGroup
                    android:id="@+id/rg_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_manyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="满意"
                        android:textColor="@color/pub_color_black" />

                    <RadioButton
                        android:id="@+id/rb_bumanyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="不满意"
                        android:textColor="@color/pub_color_black" />

                </RadioGroup>

            </LinearLayout>

            <View style="@style/line_gray_h" />

            <EditText
                android:id="@+id/et_no_cause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/pub_color_white"
                android:gravity="left"
                android:hint="不满意原因"
                android:lines="6"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="11dp"
                android:textColor="@color/pub_color_gray_666"
                android:textColorHint="@color/pub_color_gray_666"
                android:textSize="@dimen/text_h12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pub_color_white"
                android:gravity="left"
                android:paddingBottom="11dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="11dp"
                android:textColor="@color/pub_color_gray_666"
                android:textColorHint="@color/pub_color_gray_666"
                android:textSize="@dimen/text_h12"
                android:visibility="gone"
                tools:text="快捷酒店后付款水电费"
                tools:visibility="visible" />


            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/pub_btn_blue_arc_selector"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="提交"
                android:textColor="@color/pub_color_white"
                android:textSize="@dimen/text_h18"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>