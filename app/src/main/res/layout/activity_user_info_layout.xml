<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/pub_color_gray_line"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_head"
        android:background="@color/pub_color_white"
        android:layout_width="match_parent"
       android:paddingRight="15dp"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头像"
            android:textColor="@color/pub_color_black"
            android:textSize="14dp" />

        <com.framework.view.CircleImageView
            android:id="@+id/image_head"
            android:layout_width="50dp"
            android:src="@drawable/default_head"
            android:layout_height="50dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pub_color_gray_line" />

    <LinearLayout
        android:background="@color/pub_color_white"
        android:id="@+id/ll_nickname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="昵称"
            android:textColor="@color/pub_color_black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="昵称"
            android:textColor="@color/pub_color_gray_666"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/right_arrow_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pub_color_gray_line" />

    <LinearLayout
        android:background="@color/pub_color_white"
        android:id="@+id/ll_sex"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="性别"
            android:textColor="@color/pub_color_black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="男"
            android:textColor="@color/pub_color_gray_666"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/right_arrow_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pub_color_gray_line" />

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:background="@color/pub_color_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号"
            android:textColor="@color/pub_color_black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机"
            android:textColor="@color/pub_color_gray_666"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pub_color_gray_line" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="80dp"/>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:background="@drawable/pub_btn_red_selector"
        android:text="退出登录"
        android:textSize="16dp"
        android:textColor="@color/pub_color_white"
        android:layout_margin="50dp"
        android:layout_height="44dp" />
</LinearLayout>
