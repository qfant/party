<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_color_gray_f5f5f5"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/pub_et_bg"
        android:gravity="left"
        android:hint="退款原因"
        android:lines="6"
        android:padding="5dp"
        android:textColor="@color/pub_color_black"
        android:textSize="@dimen/text_h14" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/pub_btn_blue_arc_selector"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="退款"
        android:textColor="@color/pub_color_white"
        android:textSize="@dimen/text_h16" />

</LinearLayout>