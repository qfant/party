<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.framework.view.CircleImageView
            android:id="@+id/image_head"
            android:src="@drawable/logo"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="40dp"
            app:civ_border_color="#fff"
            android:layout_gravity="center_horizontal"
            app:civ_border_overlay="true"
            app:civ_border_width="0dp"
            app:civ_fill_color="#e0210e" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/app_name"
            android:textColor="@color/pub_color_black"
            android:textSize="@dimen/text_h20"
            android:visibility="gone" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="@dimen/layout_left"
            android:paddingRight="@dimen/layout_right">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:textColor="@color/pub_color_black"
                android:textSize="@dimen/text_h16" />
        </android.support.design.widget.TextInputLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_left"
                android:paddingRight="@dimen/layout_right">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:textColor="@color/pub_color_black"
                    android:textSize="@dimen/text_h16" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/text_send_code"
                android:layout_width="93dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="@dimen/layout_right"
                android:background="@drawable/pub_rectangle_yellow_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/pub_yellow_color_selector"
                android:textSize="14dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/text_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_marginRight="@dimen/layout_right"
            android:layout_marginTop="25dp"
            android:background="@drawable/pub_btn_yellow_selector"
            android:clickable="true"
            android:enabled="false"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/pub_color_white"
            android:textSize="@dimen/text_h20" />

        <TextView
            android:id="@+id/tv_rig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:padding="12dp"
            android:text="没有账号？请注册"
            android:textColor="@color/pub_color_gray_666"
            android:textSize="14dp" />

    </LinearLayout>


</ScrollView>
