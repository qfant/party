<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="11dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/pub_gray_box"
        android:scaleType="centerCrop"
        tools:src="@drawable/pub_login_icon" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="126dp"
        android:paddingRight="22dp"
        android:paddingTop="17dp"
        android:textColor="@color/pub_color_black"
        android:textSize="@dimen/text_h12"
        tools:text="越南进口Tipo牛奶面包干饼干300g办公室零食大礼包" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="126dp"
        android:gravity="center"
        android:textColor="@color/pub_color_blue"
        android:textSize="@dimen/text_h18"
        tools:text="￥100.00" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/pub_black_frame_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="-"
            android:textColor="@color/pub_color_black"
            android:textSize="@dimen/text_h18" />

        <View style="@style/line_gray_v" />

        <TextView
            android:id="@+id/tv_number2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/pub_color_black"
            android:textSize="@dimen/text_h18"
            tools:text="12666" />

        <View style="@style/line_gray_v" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="+"
            android:textColor="@color/pub_color_black"
            android:textSize="@dimen/text_h18" />

    </LinearLayout>

</FrameLayout>
